---
interface Props {
  imgSrc: string;
  imgAlt: string;
  name: string;
  color: string;
  quantity: number;
  price: number;
}

const { imgSrc, imgAlt, name, color, quantity, price } = Astro.props;
---

<article>
  <main>
    <picture>
      <img src={imgSrc} alt={imgAlt} />
    </picture>
    <section>
      <header>
        <h4>{name}</h4>
        <p>{color}</p>
      </header>
      <span>x {quantity}</span>
    </section>
  </main>
  <footer>
    <h4>${price.toFixed(2)}</h4>
    <span>X</span>
  </footer>
</article>

<style>
  article {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
  }
  main {
    display: flex;
    gap: 1rem;
  }
  section {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  picture {
    background-color: white;
    border-radius: 0.5rem;
    height: 100px;
    width: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  img {
  }
  h4,
  p,
  span {
    font-size: 1rem;
    margin: 0;
  }
  footer {
    display: flex;
    flex-direction: column;
    align-items: end;
    justify-content: space-between;
    height: 100px;
  }
  footer > span {
    cursor: pointer;
  }
  footer > span:hover {
    color: red;
  }
</style>
